<odoo>

<template id="assets_backend" name="Custom Tree Centering" inherit_id="web.assets_backend" priority="1000">
    <xpath expr="." position="inside">
        <style>
            .o_list_view th.centered-column,
            .o_list_view td.centered-column {
                text-align: center !important;
                white-space: pre-line;
            }
        </style>
    </xpath>
</template>


<record id="hr_sueldos_form" model="ir.ui.view">
    <field name="name">hr.sueldos.form</field>
    <field name="model">hr.sueldos</field>
    <field name="arch" type="xml">
        <form string="Nomina de Pago">
            <header>
            </header>
            <sheet>
                <div>
                    <label for="name" />
                    <h1>
                        <field name="name" />
                    </h1>
                </div>
                <group>
                </group>
               <notebook>
                <page string="Nomina pagina 1 de 2">
                    <field name="nomina_id" >
                        <tree editable="top" create="false">
                            <field name="empleado_id" readonly="1"/>
                            <field name="dias_trabajados" />
                            <field name="dias_ausentes" />
                            <field name="licencia" />
                            <field name="comienzo" />
                            <field name="permisos" />
                            <field name="prestamo" readonly="1"/>
                            <field name="pension" />
                            <field name="pedido_gas" />
                        </tree>
                    </field>
                </page>
                <page string="Nomina pagina 2 de 2">
                    <field name="nomina_id_bonos" >
                        <tree editable="top" create="false">
                            <field name="empleado_id" readonly="1"/>
                            <field name="b_cumplimiento" class="centered-column" />
                            <field name="b_estudio" class="centered-column" />
                            <field name="b_est_trabajador" readonly="1" class="centered-column"/>
                            <field name="b_est_especial" class="centered-column" />
                            <field name="b_antiguedad" class="centered-column" />
                            <field name="b_vacaciones" class="centered-column" />
                            <field name="b_terreno" class="centered-column" />
                            <field name="viatico" />
                            <field name="b_dia_trabajo" class="centered-column" />
                            <field name="aguinaldo" />
                            <field name="b_productividad" class="centered-column" />
                        </tree>
                    </field>
                </page>
            </notebook>
            <group>
                <group>
                    <field name="observaciones" />
                </group>
            </group>
            </sheet>
        </form>
    </field>
</record>
</odoo>