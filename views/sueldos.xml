<odoo>
<record id="hr_sueldos_form" model="ir.ui.view">
    <field name="name">hr.sueldos.form</field>
    <field name="model">hr.sueldos</field>
    <field name="arch" type="xml">
        <form string="Nomina de Pago">
            <header>
                <button name="action_cerrar_mes" string="Cerrar Mes" type="object"
                    attrs="{'invisible': [('mes_cerrado', '=', True)]}"
                    class="oe_highlight"/>
                <field name="mes_cerrado" invisible="1"/>
            </header>
            <sheet>
                <div>
                    <label for="name" />
                    <h1>
                        <field name="name" readonly="1"/>
                    </h1>
                </div>
                <group>
                </group>
               <notebook>
                <page string="Nomina pagina 1 de 3">
                    <field name="nomina_id" attrs="{'readonly': [('mes_cerrado', '=', True)]}">
                        <tree editable="top" create="false" delete="false">
                            <field name="empleado_id" readonly="1" force_save="1"/>
                            <field name="dias_trabajados" attrs="{'readonly': [('parent.mes_cerrado', '=', True)]}"/>
                            <field name="dias_ausentes" attrs="{'readonly': [('parent.mes_cerrado', '=', True)]}"/>
                            <field name="licencia" readonly="1" force_save="1"/>
                            <field name="comienzo" readonly="1" force_save="1"/>
                            <field name="permisos" attrs="{'readonly': [('parent.mes_cerrado', '=', True)]}"/>
                            <field name="prestamo" readonly="1" force_save="1"/>
                            <field name="pension" attrs="{'readonly': [('parent.mes_cerrado', '=', True)]}"/>
                            <field name="pedido_gas" attrs="{'readonly': [('parent.mes_cerrado', '=', True)]}"/>
                        </tree>
                    </field>
                </page>
                <page string="Nomina pagina 2 de 3">
                    <field name="nomina_id_base" attrs="{'readonly': [('mes_cerrado', '=', True)]}">
                        <tree editable="top" create="false" delete="false">
                            <!-- Todos los campos readonly="1" force_save="1" como estaban -->
                        </tree>
                    </field>
                </page>
                <page string="Nomina pagina 3 de 3">
                    <field name="nomina_id_bonos" attrs="{'readonly': [('mes_cerrado', '=', True)]}">
                        <tree editable="top" create="false" delete="false">
                            <field name="empleado_id" readonly="1" force_save="1"/>
                            <field name="b_cumplimiento" attrs="{'readonly': [('parent.mes_cerrado', '=', True)]}"/>
                            <field name="b_estudio" attrs="{'readonly': [('parent.mes_cerrado', '=', True)]}"/>
                            <field name="b_est_trabajador" readonly="1" force_save="1"/>
                            <field name="b_est_especial" readonly="1" force_save="1"/>
                            <field name="b_antiguedad" attrs="{'readonly': [('parent.mes_cerrado', '=', True)]}"/>
                            <field name="b_vacaciones" attrs="{'readonly': [('parent.mes_cerrado', '=', True)]}"/>
                            <field name="b_terreno" attrs="{'readonly': [('parent.mes_cerrado', '=', True)]}"/>
                            <field name="viatico" attrs="{'readonly': [('parent.mes_cerrado', '=', True)]}"/>
                            <field name="b_dia_trabajo" attrs="{'readonly': [('parent.mes_cerrado', '=', True)]}"/>
                            <field name="aguinaldo" attrs="{'readonly': [('parent.mes_cerrado', '=', True)]}"/>
                            <field name="b_productividad" attrs="{'readonly': [('parent.mes_cerrado', '=', True)]}"/>
                        </tree>
                    </field>
                </page>
            </notebook>
            <group>
                <group>
                    <field name="observaciones" attrs="{'readonly': [('mes_cerrado', '=', True)]}"/>
                </group>
            </group>
            </sheet>
        </form>
    </field>
</record>
</odoo>